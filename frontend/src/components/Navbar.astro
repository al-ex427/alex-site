---
import NavbarLink from "./NavbarLink.astro"

---

<div class="z-5 fixed top-0 w-full h-[68px] flex flex-row py-2 px-2">
    
    <div class="flex flex-row 480px:justify-between justify-center items-center relative w-full h-full bg-primary-light/75 backdrop-blur-xs border-2 rounded-[10px] border-primary-outline-light/95
        dark:bg-primary-dark/75 dark:border-primary-outline-dark/95 shadow-[0px_0px_8px_2px_rgba(0,0,0,0.15)] px-1 py-1"> 
        <div class="480px:hidden flex flex-row items-center h-full gap-1">
           <!--  <NavbarLink title="Menu"/>--->
        </div>
        <div class="hidden 480px:flex flex-row items-center h-full gap-1">
            <NavbarLink redirectTarget="/" title="Home"/>
            <NavbarLink redirectTarget="/about" title="About"/>
        </div>
        <div class="flex flex-row justify-end items-center h-full gap-1">
            <NavbarLink title="Login"/>
        </div>
        
    </div>
</div>

    